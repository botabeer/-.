# LINE Bot (مطلوبة)
LINE_CHANNEL_ACCESS_TOKEN=your_channel_access_token
LINE_CHANNEL_SECRET=your_channel_secret

# Gemini AI (مطلوبة)
GEMINI_API_KEY_1=your_first_gemini_key
GEMINI_API_KEY_2=your_second_gemini_key
GEMINI_API_KEY_3=your_third_gemini_key

# الخادم
PORT=5000
HOST=0.0.0.0
DEBUG=False
LOG_LEVEL=INFO

# PostgreSQL (اختياري - للإنتاج)
USE_POSTGRES=false
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=whale_bot
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password

# Redis (اختياري - للتخزين المؤقت)
USE_REDIS=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# المراقبة (اختياري)
ENABLE_MONITORING=false
PROMETHEUS_PORT=8000

# النسخ الاحتياطي (اختياري)
ENABLE_BACKUP=false
BACKUP_INTERVAL=24
BACKUP_KEEP_DAYS=7
BACKUP_PATH=./backups

# Docker (اختياري)
DOCKER_USERNAME=your_docker_username
DOCKER_PASSWORD=your_docker_password

# Render Deploy Hook (اختياري)
RENDER_DEPLOY_HOOK=your_render_deploy_hook_url
