# ============================================
# .env.example - مثال لملف البيئة
# ============================================
# انسخ هذا الملف إلى .env وأضف قيمك الحقيقية

# توكنات LINE Bot (مطلوبة)
LINE_CHANNEL_ACCESS_TOKEN=your_channel_access_token_here
LINE_CHANNEL_SECRET=your_channel_secret_here

# إعدادات الخادم
PORT=5000
HOST=0.0.0.0
DEBUG=True

# إعدادات السجل
LOG_LEVEL=INFO

# قاعدة البيانات
DATABASE_NAME=whale_bot.db

# المنطقة الزمنية
TIMEZONE=Asia/Riyadh

# اللغة
LANGUAGE=ar
